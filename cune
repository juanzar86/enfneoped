        if (num <= 2) return { texto: 'Dolor leve', color: 'text-blue-600', bg: 'bg-blue-50', border: 'border-blue-500', emoji: 'üòê' };
        if (num <= 4) return { texto: 'Dolor leve-moderado', color: 'text-yellow-600', bg: 'bg-yellow-50', border: 'border-yellow-500', emoji: 'üòï' };
        if (num <= 6) return { texto: 'Dolor moderado', color: 'text-orange-600', bg: 'bg-orange-50', border: 'border-orange-500', emoji: 'üò£' };
        if (num <= 8) return { texto: 'Dolor severo', color: 'text-red-600', bg: 'bg-red-50', border: 'border-red-500', emoji: 'üòñ' };
