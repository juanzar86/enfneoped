    const calcularApgar = () => {
        const suma = Object.values(apgar).reduce((acc, val) => acc + (parseInt(val) || 0), 0);
        return suma;
    };

    const calcularSilverman = () => {
        const suma = Object.values(silverman).reduce((acc, val) => acc + (parseInt(val) || 0), 0);
