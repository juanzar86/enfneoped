        16: {
            somatometria: { longitud: '11.6 cm', peso: '100 g', dbp: '3.5 cm', cc: '11.2 cm', ca: '9.5 cm', lf: '2.2 cm' },
            signosVitales: { fcf: '140-160 lpm', pa: '110/70 mmHg', imc: '18.5-24.9', glucosa: '70-100 mg/dL' },
